# Linux kernel mirrors
set(LINUX_MIRROR_OFFICIAL "https://www.kernel.org/pub/linux/kernel")
set(LINUX_MIRROR_CDN "https://cdn.kernel.org/pub/linux/kernel")
set(LINUX_MIRROR_TSINGHUA "https://mirrors.tuna.tsinghua.edu.cn/kernel")
set(LINUX_MIRROR_ALIYUN "https://mirrors.aliyun.com/linux-kernel")
set(LINUX_MIRROR_USTC "https://mirrors.ustc.edu.cn/kernel.org/linux/kernel")
set(LINUX_MIRROR_CUSTOME "@LINUX_MIRROR_CUSTOME@")

# BusyBox
set(BUSYBOX_MIRROR_OFFICIAL "https://busybox.net/downloads")
set(BUSYBOX_MIRROR_CUSTOME "@BUSYBOX_MIRROR_CUSTOME@")

# µClibc
set(UCLIBC_MIRROR_OFFICIAL "https://uclibc.org/downloads")
set(UCLIBC_MIRROR_CUSTOME "@UCLIBC_MIRROR_CUSTOME@")

# Resolve Linux mirror
if("@LINUX_MIRROR@" STREQUAL "OFFICIAL")
    set(LINUX_MIRROR_URL ${LINUX_MIRROR_OFFICIAL})
elseif("@LINUX_MIRROR@" STREQUAL "CDN")
    set(LINUX_MIRROR_URL ${LINUX_MIRROR_CDN})
elseif("@LINUX_MIRROR@" STREQUAL "TSINGHUA")
    set(LINUX_MIRROR_URL ${LINUX_MIRROR_TSINGHUA})
elseif("@LINUX_MIRROR@" STREQUAL "ALIYUN")
    set(LINUX_MIRROR_URL ${LINUX_MIRROR_ALIYUN})
elseif("@LINUX_MIRROR@" STREQUAL "USTC")
    set(LINUX_MIRROR_URL ${LINUX_MIRROR_USTC})
elseif("@LINUX_MIRROR@" STREQUAL "CUSTOME")
    set(LINUX_MIRROR_URL ${LINUX_MIRROR_CUSTOME})
else()
    message(FATAL_ERROR "Invalid LINUX_MIRROR: @LINUX_MIRROR@")
endif()

# Resolve BusyBox mirror
if("@BUSYBOX_MIRROR@" STREQUAL "OFFICIAL")
    set(BUSYBOX_MIRROR_URL ${BUSYBOX_MIRROR_OFFICIAL})
elseif("@BUSYBOX_MIRROR@" STREQUAL "CUSTOME")
    set(BUSYBOX_MIRROR_URL ${BUSYBOX_MIRROR_CUSTOME})
else()
    message(FATAL_ERROR "Invalid BUSYBOX_MIRROR: @BUSYBOX_MIRROR@")
endif()

# Resolve µClibc mirror
if("@UCLIBC_MIRROR@" STREQUAL "OFFICIAL")
    set(UCLIBC_MIRROR_URL ${UCLIBC_MIRROR_OFFICIAL})
elseif("@UCLIBC_MIRROR@" STREQUAL "CUSTOME")
    set(UCLIBC_MIRROR_URL ${UCLIBC_MIRROR_CUSTOME})
else()
    message(FATAL_ERROR "Invalid UCLIBC_MIRROR: @UCLIBC_MIRROR@")
endif()

# Construct final URLs
set(LINUX_URL "${LINUX_MIRROR_URL}/v@LINUX_VERSION_MAJOR@.x/linux-@LINUX_VERSION@.tar.xz")
set(BUSYBOX_URL "${BUSYBOX_MIRROR_URL}/busybox-@BUSYBOX_VERSION@.tar.bz2")
set(UCLIBC_URL "${UCLIBC_MIRROR_URL}/uClibc-@UCLIBC_VERSION@.tar.xz")
